<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_player"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:textColor="@color/red"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:textAlignment="center"
        android:textColor="@color/azzurro"
        android:textSize="30sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/utente"
        app:civ_border_color="@color/blu_scuro"
        app:civ_border_width="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:text="GIOCATE"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:text="VINTE"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PAREGGI"
                android:textAlignment="center"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:text="PERSE"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:text="GOL"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vinte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pareggiate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Switch
            android:id="@+id/amici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:switchPadding="10dp"
            android:fontFamily="@font/audiowide"
            android:textColor="@color/azzurro"
            android:textSize="18sp"
            android:text="Entra nella sua lista"
            android:layout_marginStart="10dp"
            android:paddingBottom="2dp"
            android:checked="false"
            android:thumb="@drawable/thumb"
            android:track="@drawable/thumb_track"/>
    </RelativeLayout>
</LinearLayout>

