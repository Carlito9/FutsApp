<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/c3"
    android:padding="5dp"
    android:layout_gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/c1"
        android:textAlignment="center"

        android:textSize="15sp"
        android:id="@+id/date"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/c1"
        android:textAlignment="center"
        android:textSize="15sp"
        android:id="@+id/oraPartita" />
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stadio"
        android:padding="5dp"
        android:textColor="@color/c1"
        android:textAlignment="textStart"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:backgroundTint="@color/c1"
        android:gravity="center"
        android:textColor="@color/c1"
        android:textStyle="bold" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/casa"
                android:textSize="45sp"
                android:textColor="@color/c1"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerA0"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:id="@+id/playerA1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerA2"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerA3"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerA4"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ospiti"
                android:textSize="45sp"
                android:textColor="@color/c1"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:id="@+id/playerB0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerB1"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:id="@+id/playerB2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:id="@+id/playerB3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playerB4"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="25sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>