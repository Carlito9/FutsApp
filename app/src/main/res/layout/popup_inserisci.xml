<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_inserisci"
    android:padding="5dp"
    android:scrollbars="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="14sp" />

            <TextView

                android:id="@+id/oraPartita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/stadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/audiowide"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/blu_scuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/c1"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/casa"
                android:fontFamily="@font/bungee_inline"
                android:textSize="32sp"
                android:textColor="@color/gold"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/audiowide"
                android:text="gol"
                android:textAlignment="textEnd"
                android:textColor="@color/blu_scuro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerA0"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/playerA1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerA2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerA3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerA4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/golA0"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:hint="0"
                        android:fontFamily="@font/audiowide"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golA1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:hint="0"
                        android:fontFamily="@font/audiowide"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golA2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:fontFamily="@font/audiowide"
                        android:textSize="20sp"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golA3"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:fontFamily="@font/audiowide"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golA4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:hint="0"
                        android:fontFamily="@font/audiowide"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ospiti"
                android:fontFamily="@font/bungee_inline"
                android:textSize="32sp"
                android:textColor="@color/gold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/audiowide"
                android:text="gol"
                android:textAlignment="textEnd"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerB0"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:paddingTop="5dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerB1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:paddingTop="5dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerB2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:paddingTop="5dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/playerB3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                    <TextView

                        android:id="@+id/playerB4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:textAlignment="center"
                        android:paddingTop="5dp"
                        android:textColor="@color/azzurro"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/golB0"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:fontFamily="@font/audiowide"
                        android:textSize="20sp"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golB1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:fontFamily="@font/audiowide"
                        android:textSize="20sp"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golB2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:fontFamily="@font/audiowide"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText

                        android:id="@+id/golB3"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:fontFamily="@font/audiowide"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>

                    <EditText
                        android:id="@+id/golB4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:fontFamily="@font/audiowide"
                        android:layout_marginVertical="2dp"
                        android:autofillHints="0"
                        android:textSize="20sp"
                        android:hint="0"
                        android:background="@drawable/text_box"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingStart="40dp"
            android:paddingTop="30dp"
            android:paddingEnd="40dp"
            android:paddingBottom="15dp">

            <EditText
                android:id="@+id/golCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:autofillHints="0"
                android:background="@drawable/text_box"
                android:fontFamily="@font/bungee_inline"
                android:hint="0"

                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:text="-"
                android:fontFamily="@font/bungee_inline"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/golOspite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:autofillHints="0"
                android:background="@drawable/text_box"
                android:fontFamily="@font/bungee_inline"
                android:hint="0"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="35sp" />


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="salva"
            android:id="@+id/regPartita"
            android:textAlignment="center"
            android:background="@drawable/border_button"
            android:fontFamily="@font/audiowide"
            android:textColor="@color/red"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</LinearLayout>