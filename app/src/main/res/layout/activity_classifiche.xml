<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Home.Classifiche.Classifiche">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/c3"
        android:id="@+id/topNav">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/textClassifica"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="CLASSIFICA"
            android:onClick="navigaClassifica"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/textMarcatori"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="MARCATORI"
            android:onClick="navigaClassifica"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topNav"
        android:id="@+id/contenitore"/>



</RelativeLayout>