<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/c3"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"

                android:textSize="15sp"
                android:id="@+id/date"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:id="@+id/oraPartita" />
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/stadio"
            android:padding="5dp"
            android:textColor="@color/c1"
            android:textAlignment="textStart"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/c1"
            android:gravity="center"
            android:textColor="@color/c1"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/casa"
                android:textSize="45sp"
                android:textColor="@color/c1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/c1"
                android:textAlignment="textEnd"
                android:text="gol"
                android:layout_marginEnd="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.25">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerA0"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:id="@+id/playerA1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerA2"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerA3"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerA4"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golA0"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golA1"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golA2"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golA3"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golA4"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ospiti"
                android:textSize="45sp"
                android:textColor="@color/c1"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/c1"
                android:textAlignment="textEnd"
                android:text="gol"
                android:layout_marginEnd="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.25">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:id="@+id/playerB0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerB1"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:id="@+id/playerB2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:id="@+id/playerB3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/playerB4"
                        android:textColor="@color/c1"
                        android:textAlignment="center"
                        android:textSize="25sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golB0"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golB1"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golB2"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golB3"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/golB4"
                        android:background="@color/c1"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/c3"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="40dp">

            <TextView
                android:id="@+id/golCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/c1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/c3"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="@color/c1"
                android:textSize="45sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="-"/>

            <TextView
                android:id="@+id/golOspite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/c1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/c3"
                android:textSize="45sp" />

    </LinearLayout>


</LinearLayout>