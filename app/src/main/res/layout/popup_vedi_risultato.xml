<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@drawable/border_text"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="14sp" />

            <TextView

                android:id="@+id/oraPartita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:textAlignment="center"
                android:textColor="@color/blu_scuro"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/stadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/audiowide"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/blu_scuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/c1"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bungee_inline"
                android:text="@string/casa"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="36sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/audiowide"
                android:text="gol"
                android:textAlignment="textEnd"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerA0"
                        android:layout_width="135dp"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/playerA1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerA2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerA3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerA4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/golA0"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/golA1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                    <TextView
                        android:id="@+id/golA2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                    <TextView
                        android:id="@+id/golA3"

                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />


                    <TextView

                        android:id="@+id/golA4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee_inline"
                android:text="@string/ospiti"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="36sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/audiowide"
                android:text="gol"
                android:textAlignment="textEnd"
                android:textColor="@color/blu_scuro"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerB0"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerB1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerB2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/playerB3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/playerB4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/azzurro"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/golB0"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                    <TextView
                        android:id="@+id/golB1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/golB2"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                    <TextView
                        android:id="@+id/golB3"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp"  />

                    <TextView

                        android:id="@+id/golB4"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/blu_scuro"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/pallone"
                        android:textAlignment="center"

                        android:textColor="@color/blu_scuro"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="40dp">

        <TextView
            android:id="@+id/golCasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/bungee_inline"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="45sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_inline"
            android:padding="5dp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/golOspite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/bungee_inline"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="45sp" />

    </LinearLayout>


</LinearLayout>